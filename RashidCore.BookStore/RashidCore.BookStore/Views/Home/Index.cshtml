@section BreadCrumb{
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="~/home/about">About</a></li>
        <li class="breadcrumb-item"><a href="~/home/privacy">Privacy</a></li>
    </ol>
</nav>
}

<section class="jumbotron text-center">
    <div class="container">
        <h1>Book Store Home - Index</h1>
        <p class="lead text-muted">
