        </p>
        <p><a href="#" class="btn btn-primary my-2">Search Books</a> </p>
    </div>
</section>

<div class="py-5 bg-light">
    <div class="container">
        <h3 class="h3">Top Books</h3>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg"></svg>
                        <div class="card-body">
                            <h3>@item.StrTitle (@item.Id.ToString())</h3>
                            <p class="card-text">
                                @item.StrDescription
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="~/book/getbookbyid/@item.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
                                </div>
                                <small class="text-muted">@item.StrAuthor</small>
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>

    </div>

</div>

