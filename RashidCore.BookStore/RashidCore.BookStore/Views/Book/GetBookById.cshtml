@model RashidCore.BookStore.Models.BookModel
@{
    ViewData["Title"] = "GetBookById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="h3 display-4">Book Detail</h3>
<div class="row">
    <div class="col-md-6">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/Books/Gaban.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/images/Books/Gaban1.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/images/Books/Gaban2.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/images/Books/Gaban3.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/images/Books/Gaban4.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12">
                <h1>    @Model.StrTitle (@Model.Id.ToString())</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-primary">
                <span class="text-primary">By: </span>
                <span class="text-monospace">  @Model.StrAuthor</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p> @Model.StrDescription</p>

            </div>
        </div>

      
        <div class="row">
            <div class="col-md-4">
                <button class="btn btn-outline-primary">Read Now</button>
            </div>
        </div>
       <hr />
       <ul class="list-group">
           <li class="list-group-item"><span class="font-weight-bold">Category: </span>@Model.StrCategory</li>
           <li class="list-group-item"><span class="font-weight-bold">Total Pages: </span>@Model.intPages</li>
           <li class="list-group-item"><span class="font-weight-bold">Language: </span>@Model.StrLanguage</li>
       </ul>
    </div>
</div>
<hr />
<div class="py-5 bg-light">
    <div class="container">
        <h3 class="h3">Top Books</h3>
        <div class="row">
            @for (int i= 0;i < 5;i++)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        @*<svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg"></svg>*@
                        <img src="~/images/Books/harrypotter.jpg" class="img-thumbnail" />
                        <div class="card-body">
                            <h3>Book Title</h3>
                            <p class="card-text">
                                book description goes here..book description goes here..
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="~/book/getbookbyid/1" class="btn btn-sm btn-outline-secondary">View Details</a>
                                </div>
                                <small class="text-muted">StrAuthor</small>
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>

    </div>

</div>
